<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Zakat Maal"
        android:textAlignment="center"
        style="@style/title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Dan mereka bertanya kepadamu apa yang mereka nafkahkan. Katakanlah: 'Yang lebih dari keperluan.' Demikianlah Allah menerangkan ayat-ayat-Nya kepadamu supaya kamu berpikir.&quot;"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(QS. Al-Baqarah:219)"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textStyle="italic"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="8dp"
        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>